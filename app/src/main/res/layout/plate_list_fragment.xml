<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mssq_plate_picture"
        android:src="@android:drawable/btn_star_big_on"
        android:paddingLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mssq_plate_picture"
        android:id="@+id/mssq_plate_title"
        android:text="@string/mssq_plate_withoutfooddeath"
        android:textSize="@dimen/plate_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mssq_plate_firstPoster"
        android:layout_below="@id/mssq_plate_title"
        android:layout_toRightOf="@id/mssq_plate_picture"
        android:text="null"/>

</RelativeLayout>